<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#212121">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SHERLOCK HOLMES SERIES"
            android:textSize="25sp"
            android:padding="16dp"
            android:id="@+id/textView"
            android:textColor="#FFF"
            android:gravity="center_horizontal"
            />

            <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:elevation="8dp"
                android:id="@+id/button1"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
            android:background="@color/viewBg"
            card_view:cardCornerRadius="8dp"
                android:onClick="Clickable"
            >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:src="@drawable/cover_s1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:scaleType="fitXY"
                android:layout_margin="5dp"
                android:id="@+id/image1"
                android:onClick="Clickable"/>

            <TextView
                android:text="On Air 2010"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_horizontal"
                android:layout_below="@+id/txt"/>

            <TextView
                android:text="IMDB Ratings  :  9.1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:gravity="center_horizontal"
                android:layout_below="@+id/image1"
                android:id="@+id/txt"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:text="Series One"
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:textSize="25dp"
                android:gravity="center_horizontal"
                android:id="@+id/textView3"
                android:paddingBottom="0sp"
                android:background="#70000000"
                android:layout_alignBottom="@+id/image1"
                android:layout_centerHorizontal="true" />
            >

        </RelativeLayout>
        </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:elevation="8dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@color/viewBg"
                card_view:cardCornerRadius="8dp"
                android:id="@+id/button2"
                android:onClick="Clickable"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:src="@drawable/cover_s2_opt"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/album_cover_height"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:scaleType="fitXY"
                        android:id="@+id/image2"
                        android:layout_margin="5dp"
                        android:onClick="Clickable"/>

                    <TextView
                        android:text="On Air 2012"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_horizontal"
                        android:layout_below="@+id/txt2"/>

                    <TextView
                        android:text="IMDB Ratings  :  9.3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:gravity="center_horizontal"
                        android:layout_below="@+id/image2"
                        android:id="@+id/txt2"
                        android:layout_marginTop="5dp"
                        />

                    <TextView
                        android:text="Series Two"
                        android:layout_width="325dp"
                        android:layout_height="wrap_content"
                        android:textColor="#FFF"
                        android:textSize="25dp"
                        android:gravity="center_horizontal"
                        android:paddingBottom="0sp"
                        android:background="#70000000"
                        android:layout_alignBottom="@+id/image2"
                        android:layout_centerHorizontal="true" />
                    >

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:elevation="8dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@color/viewBg"
                card_view:cardCornerRadius="8dp"
                android:id="@+id/button3"
                android:onClick="Clickable"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:src="@drawable/cover_s3"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/album_cover_height"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:scaleType="fitXY"
                        android:id="@+id/image3"
                        android:layout_margin="5dp"
                        android:onClick="Clickable"/>

                    <TextView
                        android:text="On Air 2016"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_horizontal"
                        android:layout_below="@+id/txt3"/>

                    <TextView
                        android:text="IMDB Ratings  :  9.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:gravity="center_horizontal"
                        android:layout_below="@+id/image3"
                        android:id="@+id/txt3"
                        android:layout_marginTop="5dp"
                        />

                    <TextView
                        android:text="Series Three"
                        android:layout_width="325dp"
                        android:layout_height="wrap_content"
                        android:textColor="#FFF"
                        android:textSize="25dp"
                        android:gravity="center_horizontal"
                        android:paddingBottom="0sp"
                        android:background="#70000000"
                        android:layout_alignBottom="@+id/image3"
                        android:layout_centerHorizontal="true" />
                    >

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:elevation="8dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@color/viewBg"
                card_view:cardCornerRadius="8dp"
                android:id="@+id/button4"
                android:onClick="Clickable"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:src="@drawable/cover_s4"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/album_cover_height"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:scaleType="fitXY"
              android:layout_margin="5dp"
                        android:id="@+id/image4"
                        android:onClick="Clickable"/>

                    <TextView
                        android:text="On Air 2016"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_horizontal"
                        android:layout_below="@+id/txt4"/>

                    <TextView
                        android:text="IMDB Ratings  :  9.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:gravity="center_horizontal"
                        android:layout_below="@+id/image4"
                        android:id="@+id/txt4"
                        android:layout_marginTop="5dp"
                        />

                    <TextView
                        android:text="Special"
                        android:layout_width="325dp"
                        android:layout_height="wrap_content"
                        android:textColor="#FFF"
                        android:textSize="25dp"
                        android:gravity="center_horizontal"
                        android:paddingBottom="0sp"
                        android:background="#70000000"
                        android:layout_alignBottom="@+id/image4"
                        android:layout_centerHorizontal="true" />
                    >

                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
